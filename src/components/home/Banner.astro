---
import {contentfulClient} from '../../lib/contentful';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';
import type { EntryFieldTypes } from 'contentful';




const entries = await contentfulClient.getEntries({
  content_type: 'banner',
}); 



// @ts-ignore
const image = "https:" + entries.items[0]?.fields?.bannerImage?.fields?.file?.url;
const title = entries.items[0]?.fields?.title;
const subTitle = entries.items[0]?.fields.subtitle;



---

<section
  class="lg:h-[60vh] bg-pink-200 mx-auto flex flex-column items-center justify-center flex-col md:flex-row gap-5 p-10"
>
  <div class="relative">
    <img
      class="relative z-10"
      src={image}
    />
    <div
      class="border-4 border-orange-400 flex-1 absolute top-10 left-20 bottom-10 right-20"
    >
    </div>
  </div>
  <div class="border-red-100 flex flex-col gap-8 lg:w-3/7">
    <h1 class="text-3xl md:text-4xl lg:text-5xl md:w-[18ch]">
     {title}
    </h1>

    <p class="md:w-[50ch] font-light leading-5">
     {subTitle}
    </p>

    <div class="flex justify-center md:justify-start">
      <a
         href="/shop"
        id="menu"
        class="bg-orange-400 text-white px-6 py-2 rounded-full hover:bg-white hover:text-orange-400 transition-all"
      >
        View Menu
      </a>
    </div>
  </div>
</section>
